<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- <link rel="stylesheet" href="../Public/style.css"> -->
     <style>
        *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html{
    font-size: 100px;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}


body{
    overflow-x: hidden;
}




#page1 {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
#page2 {
    width: 100%;
    height: 100vh;
    display: flex;
    /* justify-content: center; */
    align-items: center;
    background-color: black;
    color: white;
}


#page1 #new {
    font-size: 5vw;
    font-weight: 700;
}

#page1 #text {
    font-size: 5vw;
    font-weight: 700;
    overflow: hidden;
    background-color: red;
}

#page3 #text {
    font-size: 5vw;
    font-weight: 700;
    overflow: hidden;
    background-color: red;
}

#page1 #text span, #page3 #text span{
    display: inline-block;
}

#page2 #text {
    font-size: 30vw;
    font-weight: 700;
}   

#page3 {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}
     </style>
</head>
<body>
    <!-- <div id="hello">Kaise ho</div> -->

    <div id="page1">
        <h1 id="text">Welcome</h1>
    </div>

    <div id="page2">
        <h1 id="text">Experience</h1>
    </div>

    <div id="page3">    
        <h1 id="text"><span>Adios</span></h1>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        // Animation for #page1 #text (Simple GSAP animation)
gsap.from("#page1 #text #span", {
    y: 100,
    duration: 1,    
    stagger: 0.5,
});


gsap.to("#page2 #text", {
    duration: 2,
    transform: "translate(-100%)",
    scrollTrigger: {
        trigger: "#page2", 
        scroller: "body",
        start: "top 0%",
        end: "bottom 50%",
        scrub: 2,
        pin: true,
    }
});

gsap.from("#page1 #new", {
    x: 100,
    duration: 0.7,
    delay: 1,
    stagger: 0.5,
    opacity: 0,
})

const heading = document.querySelector("#page1 #text");

var clutter = '';

const splittedText = heading.textContent.split("");

splittedText.forEach((char) => {
    clutter += `<span>${char}</span>`;
});

heading.innerHTML = clutter;


gsap.from("#page1 #text span", {
    y: 100,
    opacity: 0,
    duration: 0.6,
    delay: 1,
    stagger: 0.3,
})


gsap.from("#page3 #text span", {
    y: 100,
    opacity: 0,
    duration: 1,
    delay: 0.5,
    stagger: 0.3,
    scrollTrigger: {
        trigger: "#page3",
        start: "top 90%",
        end: "bottom 50%",
        scrub: 2,
    }
});
    </script>
</body>
</html>